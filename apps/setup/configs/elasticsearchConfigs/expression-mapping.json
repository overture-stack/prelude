{
  "index_patterns": [
    "expression-*"
  ],
  "aliases": {
    "expression_centric": {}
  },
  "mappings": {
    "properties": {
      "hugo_symbol_autocomplete": {
        "type": "keyword",
        "fields": {
          "analyzed": {
            "type": "text",
            "analyzer": "autocomplete_analyzed",
            "search_analyzer": "lowercase_keyword"
          },
          "lowercase": {
            "type": "text",
            "analyzer": "lowercase_keyword"
          },
          "prefix": {
            "type": "text",
            "analyzer": "autocomplete_prefix",
            "search_analyzer": "lowercase_keyword"
          }
        }
      },
      "data": {
        "type": "object",
        "properties": {
          "entrez_gene_id": {
            "type": "integer"
          },
          "hugo_symbol": {
            "type": "keyword",
            "copy_to": ["hugo_symbol_autocomplete"]
          },
          "average_expression": {
            "type": "float"
          },
          "number_of_tumour_samples": {
            "type": "integer"
          },
          "cancer_type": {
            "type": "keyword"
          },
          "dataset_name": {
            "type": "keyword"
          },
          "is_oncogene": {
            "type": "keyword",
            "null_value": "No Data"
          },
          "is_tumor_suppressor_gene": {
            "type": "keyword",
            "null_value": "No Data"
          },
          "is_wdr": {
            "type": "keyword"
          }
        }
      },
      "submission_metadata": {
        "type": "object",
        "properties": {
          "submission_id": {
            "type": "keyword",
            "null_value": "No Data"
          },
          "source_file_hash": {
            "type": "keyword",
            "null_value": "No Data"
          },
          "processed_at": {
            "type": "date"
          }
        }
      }
    }
  },
  "settings": {
    "number_of_shards": 1,
    "number_of_replicas": 0,
    "index": {
      "max_result_window": "10000",
      "max_terms_count": "300000"
    },
    "analysis": {
      "analyzer": {
        "autocomplete_analyzed": {
          "tokenizer": "standard",
          "filter": ["lowercase", "edge_ngram"]
        },
        "autocomplete_prefix": {
          "tokenizer": "keyword",
          "filter": ["lowercase", "edge_ngram"]
        },
        "lowercase_keyword": {
          "tokenizer": "keyword",
          "filter": ["lowercase"]
        }
      },
      "filter": {
        "edge_ngram": {
          "type": "edge_ngram",
          "min_gram": "1",
          "max_gram": "20",
          "side": "front"
        }
      }
    }
  }
}